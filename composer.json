{
  "name": "mrcl/slim-routes",
  "description": "Routing attributes for Slim Framework",
  "keywords": [
    "slim",
    "routing",
    "attributes"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Marcel Hopf",
      "homepage": "https://marcel-hopf.de"
    }
  ],
  "scripts": {
    "fix": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "test": "vendor/bin/phpunit tests"
  },
  "require": {
    "php": "^8.1",
    "slim/slim": "^4.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "Mrcl\\SlimRoutes\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mrcl\\Tests\\SlimRoutes\\": "tests/",
      "Mrcl\\Examples\\SlimRoutes\\": "examples/"
    }
  }
}
